<div class="col-md-12 jumbotron">
  <div class="text-center">
    <h1> Saved Articles</h1>
  </div>
</div>

<div class="col-md-12">
  {{#if article}} {{#each article}}
  <div class="card">
    <div class="card-header bg-primary">
      <div class="row">
        <div class="col-md-9">
          <h4>{{this.title}}</h4>
        </div>
        <div class="col-md-3">
          <a href={{this.link}} target="_blank"><button class="btn btn-primary view-art">View full article</button></a>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-12">
          <p> {{this.summary}}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <button type="button" class="btn btn-outline-primary add-note" data-toggle="modal" data-target="#note-modal-{{this._id}}" data-id={{this._id}}>Add/View Notes</button>
          <button type="button" class="btn btn-outline-danger delete-art" data-id={{this._id}}>Delete</button>
        </div>
        <div class="col-md-9"></div>
      </div>
    </div>
  </div>
  {{/each}} {{else}}
  <div class="panel panel-default">
    <div class="panel-body">
      <h4>You have no saved articles.</h4>
    </div>
  </div>
  {{/if}}
</div>

<!--Clicked Notes Modal-->
{{#each article}} 
  {{> note-modal }} 
{{/each}}